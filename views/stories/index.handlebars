<div class="album py-5 bg-white">
  <div class="container">

    <div class="row">
      {{#each stories}}
      <div class="col-md-4">
        <div class="card mb-4 box-shadow">
          <img class="card-img-top" src="https://picsum.photos/225/100" alt="Card image cap">
          <div class="card-body card-content">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text">{{stripTags (truncate this.story 120)}}</p>
            <small class="text-muted">Posted: {{formatDate this.date 'D MMM YYYY'}}</small>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <a href="/stories/show/{{this._id}}" class="btn btn-sm btn-outline-secondary"><i class="fas fa-glasses"></i>
                  View</a>
                  {{#if user}}
                  {{{editButton this.user.id ../user.id this._id}}}
                  {{/if}}               
              </div>
            </div>
          </div>

          <div class="card-footer border-primary">
            <span class="badge badge-custom">Author:
              <a href="/user/{{user._id}}"><span aria-hidden="true" class="badge-text text-secondary">{{this.user.username}}</span></a>
            </span>
          </div>
        </div>
      </div>
      {{else}}
      <small>No stories found</small>
      {{/each}}

    </div>
  </div>
</div>